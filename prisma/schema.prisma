// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vianda {
  id           Int             @id @default(autoincrement())
  nombre       String
  tipo         Tipo
  descripcion  String
  ingredientes String
  imagen       String
  stock        Int
  status       Boolean         @default(true)
  menus        ViandasEnMenu[]
}

enum Tipo {
  clasico
  sinHarinas
  vegetariano
  dieta
}

model ViandasEnMenu {
  id            Int        @id @default(autoincrement())
  fk_Viandas    Int?
  fk_diasSemana Int?
  vianda        Vianda?    @relation(fields: [fk_Viandas], references: [id])
  diaSemana     DiaSemana? @relation(fields: [fk_diasSemana], references: [id])
}

model DiaSemana {
  id      Int             @id @default(autoincrement())
  fkCarta Int?
  dia     Dias
  carta   Carta?          @relation(fields: [fkCarta], references: [id])
  viandas ViandasEnMenu[]
}

enum Dias {
  lunes
  martes
  miercoles
  jueves
  viernes
}

model Carta {
  id          Int         @id @default(autoincrement())
  fechaInicio DateTime
  fechaFin    DateTime
  status      Boolean     @default(true)
  diasSemana  DiaSemana[]
}
