generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Vianda {
  id           Int    @id @default(autoincrement())
  nombre       String
  tipo         Tipo
  descripcion  String
  ingredientes String
  imagen       String
  stock        Int

  CartaLunes   Carta? @relation("lunes", fields: [cartaLunesId], references: [id])
  cartaLunesId Int?

  CartaMartes   Carta? @relation("martes", fields: [cartaMartesId], references: [id])
  cartaMartesId Int?
}

enum Tipo {
  clasico
  sinHarinas
  vegetariano
  dieta
}

model Carta {
  id          Int      @id @default(autoincrement())
  fechaInicio DateTime
  fechaFin    DateTime
  lunes       Vianda[] @relation("lunes")
  martes      Vianda[] @relation("martes")
}
